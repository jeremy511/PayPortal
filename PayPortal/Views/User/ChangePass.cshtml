@using PayPortal.Core.Application.ViewModels.Users
@model PassUserViewModel
@{
    ViewData["Title"] = "Editar Usuario";
}


<div class="container-fluid">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h3 class="card-text text-center text-dark">Editando Usuario</h3>
            </div>
            <div class="card-body">
                 @if (Model.HasError)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <p>@Model.Error</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                 
                <form method="post" asp-action="ChangePass" asp-controller="User">
                    <div class="mb-5">
                        <label asp-for="Password" class="form-label">Nueva Contraseña</label>
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="mb-5">
                        <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                        <input class="form-control" asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>

                    <button class="btn btn-primary" type="submit">Guardar Cambios</button>
                    <a asp-action="Edit" asp-controller="User" class="btn btn-warning">Volver Atras</a>
                    
                </form>
            </div>
        </div>
    </div>
</div>
