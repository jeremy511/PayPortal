@using PayPortal.Core.Application.ViewModels.Users
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-header">
               <h3 class="text-dark text-center">Inicial Sesion</h3>
          </div>
          <div class="card-body p-5 text-center">
            @Html.ValidationSummary(false,"", new {@class = "text-danger"})
            @if (Model.HasError) {
                        <div class="alert alert-danger alert-dismissible fade show role" role="alert">
                            <p>@Model.Error</p>
                            <button type="button" class="btn-close" data-bs-dismiss= "alert" aria-label="Close"></button>
                        </div>
             }
            <form method="post" asp-controller="User" asp-action="Index">
                <div class="form-outline mb-4">
                  <input asp-for="UserName" class="form-control form-control-lg" placeholder="Nombre de Usuario" />
                </div>

                <div class="form-outline mb-4">
                  <input asp-for="Password" class="form-control form-control-lg" placeholder="Escribir Contraseña" />
                </div>
                <button class="btn btn-primary btn-lg btn-block" type="submit">Log in</button>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>