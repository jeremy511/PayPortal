@using PayPortal.Core.Application.ViewModels.Users
@model SaveUserViewModel
@{
    ViewData["Title"] = "Crear Usuario";
}


<div class="container-fluid">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h3 class="card-text text-center text-dark">Agregando Usuario</h3>
            </div>
            <div class="card-body">
                 @if (Model.HasError)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <p>@Model.Error</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                <form method="post" asp-action="Register" asp-controller="User">
                    <div class="mb-5">
                        <label asp-for="FirstName" class="form-label">Nombre:</label>
                        <input class="form-control" asp-for="FirstName" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-5">
                        <label asp-for="LastName" class="form-label">Apellido:</label>
                        <input class="form-control" asp-for="LastName" />
                        <span asp-validation-for="LastName" class="text-danger"></span>

                    </div>
                    <div class="mb-5">
                        <label asp-for="IdCard" class="form-label">Cedula:</label>
                        <input class="form-control" asp-for="IdCard" />
                        <span asp-validation-for="IdCard" class="text-danger"></span>

                    </div>
                    <div class="mb-5">
                        <label asp-for="Email" class="form-label">Email:</label>
                        <input class="form-control" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                     <div class="mb-5">
                        <label asp-for="Tel" class="form-label">Telefono:</label>
                        <input class="form-control" asp-for="Tel" />
                        <span asp-validation-for="Tel" class="text-danger"></span>

                    </div>
                    <div class="mb-5">
                        <label asp-for="UserName" class="form-label">Nombre de Usuario:</label>
                        <input class="form-control" asp-for="UserName" />
                        <span asp-validation-for="UserName" class="text-danger"></span>

                    </div>
                    <div class="mb-5">
                        <label asp-for="Password" class="form-label"></label>
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="mb-5">
                        <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                        <input class="form-control" asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>
                    <div class="mb-5">
                        <label asp-for="UserType" class="form-label">Tipo de Usuario</label>
                        <select class="form-control" name="UserType" id="mySelect" asp-for="UserType" onchange="ShowingInput()">
                            <option value="Admin">Administrador</option>
                            <option value="Client">Cliente</option>
                        </select>
                        <span asp-validation-for="UserType" class="text-danger"></span>

                    </div>
                     <div class="mb-5"  id="mydiv" hidden>
                        <label asp-for="StartingAmount" class="form-label">Monto Inicial</label>
                        <input class="form-control" id="d" asp-for="StartingAmount" />
                        <span asp-validation-for="StartingAmount" class="text-danger"></span>

                    </div>

                    <button class="btn btn-success" type="submit">Agregar</button>
                    <a asp-action="UserAdministration" asp-controller="User" class="btn btn-warning">Volver Atras</a>
                    <input type="text" hidden />
                </form>
            </div>
        </div>
    </div>
</div>
